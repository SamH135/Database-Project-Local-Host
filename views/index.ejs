            <label for="psw"><b>Password</b></label>
            <div class="password-container">
                <input type="password" placeholder="Enter Password" name="psw" id="passwordField" required>
                <span class="toggle-password" onclick="togglePassword()">
                    &#128065; <!-- Unicode for black and white eye -->
                </span>
            </div>
        
            <button type="submit" onclick="submitForm(event)">Login</button>
        </form>
        
        <script>

            function togglePassword() {
                const passwordField = document.getElementById("passwordField");
                const eyeIcon = document.querySelector(".toggle-password");
        
                if (passwordField.getAttribute("type") === "password") {
                    passwordField.setAttribute("type", "text");
                    eyeIcon.innerHTML = "&#10008;"; // Unicode for X
                } else {
                    passwordField.setAttribute("type", "password");
                    eyeIcon.innerHTML = "&#128065;"; // Unicode for closed eye
                }
            }
