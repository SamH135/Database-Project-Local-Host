    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            flex-direction: column; /* Adjust to column layout */
        }

        h1 {
            margin-bottom: 20px;
        }

        .container {
            width: 400px; /* Adjust the width as needed */
            padding: 16px;
            border: 1px solid #ccc; /* Optional: Add a border to the container */
            border-radius: 10px; /* Add rounded edges */
            box-sizing: border-box;
            text-align: center; /* Center the content inside the container */
        }

        /* Adjust input width and margin to fit inside the container */
        input[type=text], input[type=password] {
            width: calc(100% - 20px);
            margin: 8px 0;
        }

        .password-container {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 20px;
        }
    </style>
